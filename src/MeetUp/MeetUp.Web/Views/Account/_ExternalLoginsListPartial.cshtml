@model ICollection<AuthenticationClientData>

@if(Model.Count != 0)
{
    using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
    {
    @Html.AntiForgeryToken()
        foreach (AuthenticationClientData p in Model)
        {
            if (p.AuthenticationClient.ProviderName == "facebook")
            {
                <button type="submit" style="background-color:#3a5795; color: #ffffff;" class="btn btn-default" name="provider" value="@p.AuthenticationClient.ProviderName" title="Log in using your @p.DisplayName account"><i class="fa fa-facebook"> </i> @p.DisplayName</button>
            }
            else
            {
                <button type="submit" class="btn btn-default" name="provider" value="@p.AuthenticationClient.ProviderName" title="Log in using your @p.DisplayName account"><i class="fa fa-sign-in"> </i>@p.DisplayName</button>
            }
        }
    }
}
